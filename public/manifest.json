{
  "short_name": "Chrome IP Hook",
  "name": "Chrome IP Logger Hook",
  "version": "1.0",
  "manifest_version": 3,
  "action": {
    "default_popup": "popup.html",
    "default_title": "Open Setup"
  },
  "icons": {
    "16": "eye.png",
    "48": "eye.png",
    "128": "eye.png"
  },
  "host_permissions": [
    "https://api.ipify.org/"
  ],
  "optional_host_permissions": [
    "*://*/*"
  ],
  "permissions": [
    "scripting",
    "storage"
  ],
  "background": {
    "service_worker": "service-worker.js"
}
}
